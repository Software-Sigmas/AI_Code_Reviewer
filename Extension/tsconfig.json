{
	"compilerOptions": {
		"module": "Node16", // Use "nodenext" if your TypeScript version supports it, for more accurate module resolution.
		"target": "ESNext", // Targeting "ESNext" ensures you use the latest ECMAScript features.
		"lib": [
			"ESNext" // This ensures you include definitions for the latest ECMAScript features.
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true, // Enables compatibility with non-ES module packages.
		"skipLibCheck": true // This can speed up compilation by skipping type checks for declaration files.
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"webviews"
	]
}